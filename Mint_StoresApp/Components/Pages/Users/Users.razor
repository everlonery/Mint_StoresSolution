@page "/users"
@inject NavigationManager NavigationManager
@using Mint_StoresApp.DataControllers
@using Mint_StoresApp.Models
@rendermode InteractiveServer

<PageTitle>Users</PageTitle>

<h3>Користувачі</h3>
<button class="btn btn-success" @onclick="NavigateToAddUserPage">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
    </svg>
</button>
@if (showSuccessMessage)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <span>Успішно!</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" @onclick="CloseMessage"></button>
    </div>
}
else if (showErrorMessage)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <span>Помилка!</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" @onclick="CloseMessage"></button>
    </div>
}
@if (users == null)
{
    <p><em>Завантаження...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Прізвище</th>
                <th>Ім'я</th>
                <th>По-батькові</th>
                <th>Дата народження</th>
                <th>Чи працює?</th>
                <th>Телефон</th>
                <th>Email</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.LastName</td>
                    <td>@user.FirstName</td>
                    <td>@user.ParentName</td>
                    <td>@user.BirthDate.ToLongDateString()</td>
                    <td>@user.IsActive</td>
                    <td>@user.Phone</td>
                    <td>@user.Email</td>
                    <td>
                        <button class="btn btn-danger" @onclick="() => DeleteUser(user)">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5" />
                            </svg>
                        </button>
                    </td>
                    <td>
                        <button class="btn btn-warning" @onclick="() => NavigateToUpdateUserPage(user)">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-clockwise" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2z" />
                                <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466" />
                            </svg>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<style>
    .alert-dismissible {
        margin: 0.5rem;
    }

        .alert-dismissible .btn-close {
            font-size: 0.5rem;
            position: absolute;
            top: 0;
            right: 0;
            padding: 0.5rem 0.5rem;
        }
</style>

@code {
    void NavigateToAddUserPage()
    {
        NavigationManager.NavigateTo("/add-user");
    }

    void NavigateToUpdateUserPage(User user)
    {
        var json = System.Text.Json.JsonSerializer.Serialize(user);
        NavigationManager.NavigateTo($"/update-user?json={Uri.EscapeDataString(json)}");
    }

    List<User>? users;
    bool showSuccessMessage = false;
    bool showErrorMessage = false;
    UsersController dataController = new();
    protected override async Task OnInitializedAsync()
    {
        users = await dataController.SelectUsers();
    }

    async Task DeleteUser(User user)
    {
        var result = await dataController.DeleteUser(user);
        users = await dataController.SelectUsers();
        if (result)
            showSuccessMessage = true;
        else
            showErrorMessage = true;
    }

    void CloseMessage()
    {
        showSuccessMessage = false;
        showErrorMessage = false;
    }
}
